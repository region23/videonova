{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YouTube Video Translator",
  "version": "0.1.0",
  "identifier": "com.yt-translator-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "YouTube Video Translator",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["$DOCUMENT/*", "$DOWNLOAD/*", "$TEMP/*", "$APP/*", "/*"]
    },
    "shell": {
      "open": true
    },
    "http": {
      "all": true,
      "request": true,
      "scope": ["https://**", "http://**"]
    }
  }
}
