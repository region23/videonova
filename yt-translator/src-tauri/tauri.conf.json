{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.yt-translator.app",
  "productName": "yt-translator",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["*"],
          "permissions": [
            "core:path:default",
            "core:event:default",
            "core:window:default",
            "core:app:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "dialog:default",
            "opener:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "title": "yt-translator",
        "width": 800,
        "height": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
} 